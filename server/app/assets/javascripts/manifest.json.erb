<% icon_sizes = [16, 24, 32, 48, 64, 128, 256, 512] %>
{
  "name": "Nuita",
  "short_name": "Nuita",
  "start_url": "/",
  "icons": [
  <% icon_sizes.map { |s| "#{s}x#{s}" }.each.with_index do |dim, i| %>
    {
      "src": "<%= image_path "serviceworker-rails/favicon-#{dim}.png" %>",
      "sizes": "<%= dim %>",
      "type": "image/png",
      "purpose": "maskable any"
    }<%= i == (icon_sizes.length - 1) ? '' : ',' %>
  <% end %>
  ],
  "theme_color": "#36ca6c",
  "background_color": "#36ca6c",
  "display": "standalone",
  "orientation": "portrait",
  "share_target": {
    "action": "/nweets/new",
    "method": "GET",
    "enctype": "application/x-www-form-urlencoded",
    "params": {
      "text": "text"
    }
  }
}
